generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id               Int      @id @default(autoincrement())
  email            String   @unique
  name             String
  password         String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  isAdmin          Boolean  @default(false)
  defaultAddressId Int?     @unique
  defaultSupplier  String?
  defaultPayment   String?

  orders         Order[]
  cart           CartItem[]
  wishlists      Wishlist[]
  reviews        Review[]
  chats          SupportChat[]
  messages       ChatMessage[]
  addresses      Address[]
  adminSessions  AdminSession[]
  defaultAddress Address?       @relation("DefaultAddress", fields: [defaultAddressId], references: [id], onDelete: SetNull)
}

model Category {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  image       String?
  parentId    Int?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  parent   Category?         @relation("CategoryToCategory", fields: [parentId], references: [id], onDelete: SetNull)
  children Category[]        @relation("CategoryToCategory")
  products ProductCategory[]

  @@index([parentId])
}

model Brand {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  image       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  products Product[]
}

model Product {
  id           Int      @id @default(autoincrement())
  name         String
  description  String?
  price        Float
  previewImage String?
  stock        Int      @default(0)
  brandId      Int
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  brand         Brand             @relation(fields: [brandId], references: [id])
  categories    ProductCategory[]
  cartItems     CartItem[]
  orderItems    OrderItem[]
  wishlistItems WishlistItem[]
  reviews       Review[]
  images        ProductImage[]
  details       ProductDetail[]

  @@unique([name, brandId])
  @@index([brandId])
}

model ProductDetail {
  id        Int      @id @default(autoincrement())
  productId Int
  key       String
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([productId])
}

model ProductCategory {
  productId  Int
  categoryId Int
  createdAt  DateTime @default(now())

  product  Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@id([productId, categoryId])
  @@index([categoryId])
}

model CartItem {
  id        Int @id @default(autoincrement())
  userId    Int
  productId Int
  quantity  Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([userId, productId])
}

model Order {
  id        Int      @id @default(autoincrement())
  userId    Int
  status    String   @default("pending")
  total     Float

  // Snapshot der Lieferadresse zum Bestellzeitpunkt
  shippingStreet      String
  shippingHouseNumber String
  shippingCity        String
  shippingPostalCode  String
  shippingCountryCode String   @default("DE")
  shippingFirstName   String
  shippingLastName    String
  shippingPhone       String?

  // Zahlungs- und Versandinformationen
  paymentMethod       String
  shippingMethod      String?
  shippingCost        Float     @default(0)
  trackingNumber      String?
  paymentStatus       String    @default("pending")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  orderItems OrderItem[]
}

model OrderItem {
  id        Int   @id @default(autoincrement())
  orderId   Int
  productId Int
  quantity  Int
  price     Float

  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id])

  @@unique([orderId, productId])
}

model Wishlist {
  id        Int      @id @default(autoincrement())
  userId    Int
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user  User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  items WishlistItem[]
}

model WishlistItem {
  id         Int      @id @default(autoincrement())
  wishlistId Int
  productId  Int
  createdAt  DateTime @default(now())

  wishlist Wishlist @relation(fields: [wishlistId], references: [id], onDelete: Cascade)
  product  Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([wishlistId, productId])
}

model Review {
  id        Int      @id @default(autoincrement())
  userId    Int
  productId Int
  rating    Int      @default(5)
  title     String?
  comment   String?
  helpful   Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([userId, productId])
  @@index([productId])
  @@index([rating])
}

model SupportChat {
  id          String   @id @default(cuid())
  userId      Int
  status      String   @default("open") // open, in_progress, closed
  subject     String?
  assignedTo  Int? // Admin ID assigned to this chat
  unreadCount Int      @default(0) // Unread messages count for admin
  lastMessageAt DateTime @default(now()) // Last message timestamp for sorting
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user     User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages ChatMessage[]

  @@index([userId])
  @@index([status])
  @@index([assignedTo])
  @@index([lastMessageAt])
}

model ChatMessage {
  id        Int      @id @default(autoincrement())
  chatId    String
  userId    Int
  content   String
  isAdmin   Boolean  @default(false)
  read      Boolean  @default(false) // Track if message has been read
  createdAt DateTime @default(now())

  chat SupportChat @relation(fields: [chatId], references: [id], onDelete: Cascade)
  user User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([chatId])
  @@index([userId])
  @@index([read])
}

model ProductImage {
  id         Int      @id @default(autoincrement())
  productId  Int
  index      Int      @default(0)
  url        String
  previewUrl String?
  createdAt  DateTime @default(now())

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([productId, index])
  @@index([productId])
}

model Address {
  id          Int      @id @default(autoincrement())
  userId      Int
  street      String
  houseNumber String
  city        String
  postalCode  String
  countryCode String   @default("DE")
  firstName   String
  lastName    String
  phone       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user           User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  defaultForUser User? @relation("DefaultAddress")

  @@index([userId])
}

model AdminSession {
  id        String   @id @default(cuid())
  userId    Int
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
}
